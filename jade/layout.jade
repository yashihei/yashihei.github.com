    body
        nav.navbar.navbar-inverse
            .container
                .navbar-header
                    button.navbar-toggle(data-toggle="collapse" data-target=".target")
                        - for (var i = 0; i < 3; i++)
                            span.icon-bar
                    a.navbar-brand(href="/") yashihei.net
                .collapse.navbar-collapse.target
                    ul.nav.navbar-nav
                        li
                            a(href="./about.html") About
                        li
                            a(target="_brank" href="http://yashihei.hatenablog.com") Blog
        block content
        footer
            div.container
                p.text-center © 2018 yashihei
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
        script(src="js/bootstrap.min.js")
        script(src="js/gifffer.min.js")
        script.
            window.onload = function() { Gifffer({
                playButtonStyles: {'width':'60px', 'height':'60px', 'border-radius':'30px', 'background':'rgba(255, 255, 255, 0.3)', 'position':'absolute', 'top':'50%', 'left':'50%', 'margin':'-30px 0 0 -30px' },
                playButtonIconStyles: {'width':'0', 'height':'0', 'border-top':'14px solid transparent', 'border-bottom':'14px solid transparent', 'border-left':'14px solid rgba(0, 0, 0, 0.5)', 'position':'absolute', 'left':'26px', 'top':'16px'}
            }); }
